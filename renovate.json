{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>DanySK/renovate-config:gradle-plugin"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "SemVer Major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "SemVer Minor"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch",
        "digest",
        "bump"
      ],
      "addLabels": [
        "SemVer Patch"
      ]
    }
  ],
  "schedule": [
    "every weekend"
  ]
}
